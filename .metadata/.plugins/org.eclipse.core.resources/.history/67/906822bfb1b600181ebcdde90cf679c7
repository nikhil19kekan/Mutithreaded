import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.ObjectInputStream;
import java.io.PrintWriter;
import java.net.Socket;

public class ServerService extends Server implements Runnable{
	private Socket client=null;
	private ObjectInputStream is=null;
	private BufferedReader bf= null;
	PrintWriter pw=null;
	
	public ServerService(Socket client) throws IOException {
		this.client=client;
		pw=new PrintWriter(client.getOutputStream());
		bf=new BufferedReader(new InputStreamReader(client.getInputStream()));
	}
	@Override
	public void run() {
		int c;
		StringBuilder bld=new StringBuilder(10);
		try{
		while(client.isConnected()){
			while((c=bf.read()) != -1){
				bld.append((char)c);
			}
			System.out.println("buffer:"+(char)c);
			bld.append((char)c);
			System.out.println("builder:"+bld.toString());
			if(bld.length()==bld.capacity()){
				ServerWindow.write(bld.toString());
				bld.setLength(0);
			}
		}
		}catch(Exception e){
			
		}
	}
}
